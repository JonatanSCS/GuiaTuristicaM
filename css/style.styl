@media (max-width: 767px)
	.navegador
		ul
			li:nth-child(n)
				background azulHeader
			li:nth-child(2n)
				background azul
			li:first-child
				width 100%
			li:nth-child(7)
				text-align center
				background none

				input
					background azulC
					width 100%
				span
					float left
					margin-left -15px
			li:last-child
				background none

	.estados-lista, .arte-lista
		ul
			li
				a
					color azul
					


